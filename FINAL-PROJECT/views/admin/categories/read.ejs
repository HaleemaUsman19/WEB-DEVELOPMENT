<div class="container mt-4">
    <% if(category.length > 0) { %>
        <h2 class="text-center text-success mb-4">Category List</h2>
        <table class="table table-striped table-bordered">
            <thead class="table-success">
                <tr>
                    <th>Category Name</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% category.forEach((category) => { %>
                    <tr>
                        <td><%= category.name %></td>
                        <td><%= category.description %></td>
                        <td class="d-flex justify-content-center">
                            <a href="/admin/category/edit/<%= category._id %>" class="btn btn-outline-success btn-sm me-2">Edit</a>
                            <a href="/admin/category/delete/<%= category._id %>" class="btn btn-outline-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <h1 class="text-center text-danger">No Category Yet</h1>
    <% } %>
</div>

<style>
    .table {
        font-size: 1rem;
    }

    .table th, .table td {
        text-align: center;
    }

    .btn-outline-success {
        background-color: #28a745;
        border-color: #28a745;
        color: #d4edda;
    }

    .btn-outline-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: #d4edda;
    }

    .table-success {
        background-color: #d4edda !important;
    }

    h2.text-success {
        color: #28a745 !important;
    }

    h1.text-danger {
        color: #dc3545 !important;
    }
</style>
