<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="stylesheets/style.css">
</head>
<body>

    <!-- Toggle Button for Sidebar -->

    <!-- Sidebar -->
    <div id="sidebar" class=" bg-dark d-flex flex-column p-3 text-white position-fixed h-100" style="width: 250px;">
        <h3>Morrisons Dashboard</h3>
        <ul class="nav flex-column">
            <!-- Dropdown for Categories -->
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle text-white" href="#" id="categoriesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Categories
                </a>
                <ul class="dropdown-menu" aria-labelledby="categoriesDropdown">
                    <li><a class="dropdown-item" href="/admin/category/add">Add Category</a></li>
                    <li><a class="dropdown-item" href="/admin/category/read">List of Categories</a></li>
                    <!-- <li><a class="dropdown-item" href="/admin/category/household">Household</a></li>
                    <li><a class="dropdown-item" href="/admin/category/homeAndGarden">Home & Garden</a></li>
                    <li><a class="dropdown-item" href="/admin/category/babyAndToddler">Baby & Toddler</a></li>
                    <li><a class="dropdown-item" href="/admin/category/toysAndEntertainment">Toys & Entertainment</a></li> -->
                </ul>
            </li>

            <!-- Products Link -->
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle text-white" href="#" id="productDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Product
                </a>
                <ul class="dropdown-menu" aria-labelledby="productDropdown">
                    <li><a class="dropdown-item" href="/admin/product/add">Add</a></li>
                    <li><a class="dropdown-item" href="/admin/product/read">List</a></li>
                </ul>
            </li>
        </ul>
    </div>

    <!-- Main Content Area -->
    <div id="mainContent" class="content" style="margin-left: 250px; padding: 20px;">
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="javascript:void(0)">Logo</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mynavbar">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="javascript:void(0)">Link</a>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <input class="form-control me-2" type="text" placeholder="Search">
                        <button class="btn btn-primary" type="button">Search</button>
                    </form>
                </div>
            </div>
        </nav>

        <!-- Page Content -->
        <%- body %>
    </div>

    <!-- Bootstrap JS with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/javascripts/script.js"></script>
</body>
</html>
