<div class="container mt-4">
    <% if(category.length > 0) { %>
    <h2>Category List</h2>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Category Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% category.forEach( (category) =>{  %>
            <tr>
                <td><%= category.name %></td>
                <td><%= category.description %></td>
                <td>
                    <a href="/admin/category/edit/<%= category._id %>" class="btn btn-primary btn-sm">Edit</a>
                    <a href="/admin/category/delete/<%= category._id %>" class="btn btn-danger btn-sm">Delete</a>
                </td>
                
            </tr>
        <% }); %>
        </tbody>
    </table>
    <% } else { %>
        <h1 class="text-center">No Category Yet</h1>
    <% } %>
</div>
