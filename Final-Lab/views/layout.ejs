<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="stylesheets/style.css">
</head>
<body>

    <!-- Sidebar -->
    <div id="sidebar" class="bg-success d-flex flex-column p-3 text-white position-fixed h-100" style="width: 250px;">
        <h3>Morrisons Dashboard</h3>
        <ul class="nav flex-column">
            <!-- Categories Links -->
            <li class="nav-item">
                <a class="nav-link text-white" href="/admin/category/add">Add Category</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="/admin/category/read">List of Categories</a>
            </li>

            <!-- Products Links -->
            <li class="nav-item">
                <a class="nav-link text-white" href="/admin/product/add">Add Product</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="/admin/product/read">List of Products</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="/admin/user/users">List of Users</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="/add-to-cart/admin/orders">Order Details</a>
            </li>
        </ul>
    </div>

    <!-- Main Content Area -->
    <div id="mainContent" class="content" style="margin-left: 250px; padding: 20px;">
        <!-- Navbar -->
        <nav class="navbar navbar-expand-sm navbar-dark bg-success">
            <div class="container-fluid">
                <a class="navbar-brand" href="javascript:void(0)">Morrisons</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mynavbar">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/logout">Logout</a>
                        </li>
                    </ul>
                    
                    
                    
                </div>
            </div>
        </nav>

        <!-- Page Content -->
        <%- body %>
    </div>

    <!-- Bootstrap JS with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/javascripts/script.js"></script>
</body>
</html>
